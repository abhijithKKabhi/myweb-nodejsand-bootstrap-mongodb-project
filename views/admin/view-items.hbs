<div class="container">
<section style="margin-top: 80px;">

<table class="table">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">catogery</th>
      <th scope="col">Image</th>
      <th scope="col">Edit/Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.itemName}}</td>
      <td>{{this.description}}</td>
      <td>{{this.type}}</td>
      <td><img style="height: 50px; width: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        
      <a href="/admin/edit-items/{{this._id}}" class="btn btn-primary">Edit</a>
      <a  class="btn btn-danger" onclick="document.getElementById('id01').style.display='block'">delete</a>
      
      
      </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
</section>
</div>

<div id="id01" class="modal">
  <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">Ã—</span>
  <form class="modal-content" action="/admin/delete-items/{{this._id}}">
    <div class="container">
      <h1>Delete Account</h1>
      <p>Are you sure you want to delete your product?</p>
    
      <div class="clearfix">
        <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
        <a href="/admin/delete-items/{{this._id}}" onclick="document.getElementById('id01').style.display='none'" class="deletebtn" >delete</a>
        {{!-- <button type="button" onclick="document.getElementById('id01').style.display='none'" class="deletebtn">Delete</button> --}}
      </div>
    </div>
  </form>
</div>

<script>
// Get the modal
var modal = document.getElementById('id01');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}
</script>
